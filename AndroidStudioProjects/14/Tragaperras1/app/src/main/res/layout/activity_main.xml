<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/tragaperras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/fruta1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/frutas_animacion1"/>
        <ImageView
            android:id="@+id/fruta2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/frutas_animacion2"/>
        <ImageView
            android:id="@+id/fruta3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/frutas_animacion3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tragaperras"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_jugar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/jugar"/>

        <Button
            android:id="@+id/btn_parar"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/parar"
            android:layout_marginStart="20dp"/>
    </LinearLayout>
</RelativeLayout>