<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_pulsaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pulsaciones_default"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_puntuacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/puntuacion_default"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/tragaperras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fruta1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/frutas_animacion1" />

            <ImageView
                android:id="@+id/fruta2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/frutas_animacion2" />

            <ImageView
                android:id="@+id/fruta3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/frutas_animacion3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_jugar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/jugar"
                android:textSize="20sp"
                android:padding="16dp"
                android:backgroundTint="@color/verde"
                />


            <Button
                android:id="@+id/btn_parar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/parar"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:padding="16dp"
                android:backgroundTint="@color/rojo"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
