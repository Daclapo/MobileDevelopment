<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/etiquetaSuperior"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hePensadoNumero" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cual"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/entradaUsuario"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/intentalo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="@string/intentalo" />

            <EditText
                android:id="@+id/numero"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:background="@drawable/btn">


            </EditText>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutBotonProbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dummyInvisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="@string/intentalo"
                android:visibility="invisible" />

            <Button
                android:id="@+id/probar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="onProbar"
                android:text="@string/probar" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>